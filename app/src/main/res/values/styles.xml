<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/background_dark </item>
        <item name="materialAlertDialogTheme">@style/Theme.App.MaterialDialog</item>
        <item name="android:buttonStyle">@style/Theme.App.Button</item>

    </style>

    <!-- Dialog Alert Style -->
    <style name="Theme.App.MaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSurface">#FFFFFF</item> <!--Background color-->
        <item name="colorOnSurface">#000000</item> <!--Letter color-->
        <item name="fontFamily">@font/montserrat</item>
        <item name="alertDialogStyle">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.MaterialComponents.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.App.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Theme.App.Button.Neutral</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.AppCompat.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="Theme.App.Button.Positive" parent="">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>


    <style name="Theme.App.Button.Neutral" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- Button -->
    <style name="Theme.App.Button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
        <item name="height">48dp</item>
    </style>

    <!-- Button Google -->
    <style name="Theme.App.ButtonGoogle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="icon">@drawable/icon_google</item>
        <item name="iconTintMode">multiply</item>
        <item name="iconGravity">start</item>
        <item name="iconSize">24dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">14sp</item>
        <item name="height">48dp</item>
    </style>

    <!-- Button Google -->
    <style name="Theme.App.Icon" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
